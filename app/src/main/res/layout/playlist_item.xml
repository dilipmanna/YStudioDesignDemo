<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">
        <RelativeLayout
            android:id="@+id/rl_playlistPreview"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/videopreview"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@color/colorBlacktrans"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_playlist"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_playlistTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Playlist title playlist title playlist title"
            android:textSize="@dimen/_15sdp"
            android:layout_toRightOf="@id/rl_playlistPreview"
            android:ellipsize="end"
            android:maxLines="1"/>
        <LinearLayout
            android:id="@+id/ll_analytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/rl_playlistPreview"
            android:orientation="horizontal"
            android:layout_below="@id/tv_playlistTitle">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="noOfViewIcon"
                    android:src="@drawable/ic_equalizer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7,472"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="noofcomment"
                    android:src="@drawable/ic_menu_slideshow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/ll_analytics"
            android:layout_toRightOf="@id/rl_playlistPreview"
            android:src="@drawable/ic_public"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>